{% extends "mooveActiviteBundle:Accueil:tableauDeBord.html.twig" %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/detailsActivite/style.css') }}">
{% endblock %}
{% block activeAccueil %}active{% endblock %}
{% block bodyTableau %}
    <br>
    <div class="row">
        <div class="col-xs-6 col-md-3">
                
                <div class="panel status panel-success">
                    <div class="panel-heading">
                        <h1 class="panel-title text-center">{{ nbParticipations }}</h1>
                    </div>
                    <div class="panel-body text-center">                        
                        <strong>participation(s)</strong>
                    </div>
                </div>
    
            </div>          
            <div class="col-xs-6 col-md-3">
              
                <div class="panel status panel-info">
                    <div class="panel-heading">
                        <h1 class="panel-title text-center">{{ nbOrganisations }}</h1>
                    </div>
                    <div class="panel-body text-center">                        
                        <strong>organisation(s)</strong>
                    </div>
                </div>
    
            </div>
            <div class="col-xs-6 col-md-3">
               
                <div class="panel status panel-danger">
                    <div class="panel-heading">
                        <h1 class="panel-title text-center">{{ nbDemandesEnAttente }}</h1>
                    </div>
                    <div class="panel-body text-center">                        
                        <strong>demande(s) d'acception en attente</strong>
                    </div>
                </div>
    
             
            </div>
            <div class="col-xs-6 col-md-3">
              
                <div class="panel status panel-warning">
                    <div class="panel-heading">
                        <h1 class="panel-title text-center">{{ listeDemandesEnAttenteOrganisateur }}</h1>
                    </div>
                    <div class="panel-body text-center">                        
                        <strong> demande(s) de participation en attente</strong>
                    </div>
                </div>
            </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-danger">
              <div class="panel-heading">
                <h3 class="panel-title">Mes demandes de participations</h3>
              </div>
              <div class="panel-body">
                
                {% for liste in listeDemandesEnAttente.listeDemande %}
                  <p>Votre demande de participation à l'activite {{ liste.sportPratique.nom | lower }}  de {{ liste.organisateur.prenom ~ " " ~ liste.organisateur.nom }} est toujours en attente.</p>
                {% else %}
                  Vous n'avez pas de demandes en attente.
                {% endfor %}
              </div>
            </div>
        </div>
      <div class="col-md-6">
          <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title">Demandes de participations à vos activités</h3>
            </div>
            <div class="panel-body">
               {% for listeOrganisations in listeDesDemandesDeParticipationsAMesActivites.listeOrganisations %}
                  {% for listeDemande in listeDesDemandesDeParticipationsAMesActivites.listeDemandes[0] %}
                    <p>{{ listeDemande.prenom ~ " " ~ listeDemande.nom}}  demande à participer à l'activite {{listeOrganisations.sportPratique.nom | lower }} du {{listeOrganisations.DateHeureRDV | date("d/m/y") }}.
                      <button type="button" class="btn btn-success btn-xs ">Accepter</button>
                      <button type="button" class="btn btn-danger btn-xs">Refuser</button>
                    </p>
            
                  {% endfor %}
                {% else %}
                Vous n'avez pas de demandes en attente.
              {% endfor %}
            </div>
          </div>
      </div>
    </div>
{% endblock %}